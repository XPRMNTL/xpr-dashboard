// For adding an Angular Module
//
// `flags` is a set of bit flags
// Start with 0. If you want the:
//   Controller, add 1
//   Service, add 2
//   Directives, add 4
//   Filters, add 8
mixin ngModule(dir, name, flags)
  if typeof name === 'number'
    - flags = name
    - name = dir

  if typeof name === 'undefined'
    - name = dir

  if ! flags
    - flags = 1

  if flags & 1
    script(src='js/' + dir + '/' + name + 'Controller.js')

  if flags & 2
    script(src='js/' + dir + '/' + name + 'Service.js')

  if flags & 4
    script(src='js/' + dir + '/' + name + 'Directives.js')

  if flags & 8
    script(src='js/' + dir + '/' + name + 'Filters.js')
