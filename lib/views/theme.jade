include partials/mixins

doctype html
html(lang='en', data-ng-app='featureApp')
  head
    title FS-Feature
    base(href='' + baseUrl)
    meta(name='viewport' content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no' id='vpHack')
    link(rel='apple-touch-icon' href='/img/iOS.png')
    link(href='http://fonts.googleapis.com/css?family=Josefin+Slab:600,700|Maven+Pro:400,500,700', rel='stylesheet', type='text/css')
    link(rel='stylesheet' href='/vendors/bootstrap/css/bootstrap.css')
    link(rel='stylesheet' href='/vendors/angular-toggle-switch/angular-toggle-switch.css')
    link(rel='stylesheet' href='/vendors/angular-toggle-switch/angular-toggle-switch-bootstrap.css')
    block headCSS
    link(rel='stylesheet' href='/css/feature.css')
  body
    header#pageHeader
      .container
        a.brand(href='/')
          h1 XPRMNTL
          h2 Experiments as a Service
        .account-info(data-account-info)

    .container(data-ng-class='loading ? "loading" : "loaded"')
      if unauthorized
        .alert.alert-danger.alert-dismissable
          button(type='button', class='close', data-dismiss='alert', aria-hidden='true') &times;
          strong='Sign in Failed! '
          = 'You don\'t have authorization to view this page. You must be a member of our organizations to view this content'
      block content

    script(src='//code.jquery.com/jquery-2.1.1.min.js')
    script(src='/vendors/bootstrap/js/bootstrap.min.js')
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.2.19/angular.js')
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.2.19/angular-route.js')
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.2.19/angular-sanitize.js')
    //- script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.3.0-rc.1/angular.js')
    //- script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.3.0-rc.1/angular-route.js')
    //- script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.3.0-rc.1/angular-sanitize.js')
    script(src='/vendors/ui-bootstrap/ui-bootstrap-0.11.0.min.js')
    script(src='/vendors/angular-toggle-switch/angular-toggle-switch.min.js')

    // Always include the app and the AccountInfo
    script(src='js/Base/index.js')

    +ngModule('AccountInfo', 6)

    //- script(src='js/AccountInfo/AccountInfoDirectives.js')
    //- script(src='js/AccountInfo/AccountInfoService.js')
    //- viewport hack
    script(type='text/javascript').
      window.onload = function() {
        var mvp = document.getElementById('vpHack');
        mvp.setAttribute('content', 'width=400, user-scalable=no');
      }

    block footJS
